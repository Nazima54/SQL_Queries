SELECT * FROM employees

SELECT UPPER(first_name), LOWER(last_name) 
FROM employees

SELECT MAX(salary)
FROM employees

SELECT MIN(salary)
FROM employees

SELECT AVG(salary)
FROM employees

SELECT ROUND(AVG(salary))
FROM employees
				 
SELECT COUNT(employee_id)
FROM employees
				 
SELECT COUNT(email)
FROM employees
				 
SELECT COUNT(*)
FROM employees

SELECT SUM(salary)
FROM employees

SELECT SUM(salary)
FROM employees
WHERE department = 'Toys'
				 
				 